{{<page}}
  {{$body}}
    <h2 class="text-xl font-medium mb-4">You entered</h2>
    <dl class="grid gap-2 text-sm">
      <div class="flex justify-between border-b border-slate-100 pb-2">
        <dt class="text-slate-500">Name</dt>
        <dd class="font-semibold">{{name}}</dd>
      </div>
      <div class="flex justify-between border-b border-slate-100 pb-2">
        <dt class="text-slate-500">Age</dt>
        <dd class="font-semibold">{{age}}</dd>
      </div>
    </dl>
    <a href="/" class="mt-4 inline-flex text-sm font-semibold text-slate-700 underline">Go back</a>
  {{/body}}
{{/page}}
